    3  sudo apt install zip -y
    4  unzip awscliv2.zip
    5  sudo ./aws/install
    6  /usr/local/bin/aws --version
    7  vim ~/.bashrc
    8  # Add this line at the end:
    9  export PATH=$PATH:/usr/local/bin/
